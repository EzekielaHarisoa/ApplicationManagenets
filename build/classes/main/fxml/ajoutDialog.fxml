<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           prefWidth="950.0" prefHeight="550.0"
           styleClass="bg-light"
           stylesheets="@../../ressources/css/tailwindLight.css">

    <children>
        <AnchorPane>
            <VBox alignment="TOP_CENTER" spacing="30" 
                  AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  styleClass="card">

                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <!-- Titre -->
                <HBox alignment="CENTER">
                    <Label text="➕ Ajouter un nouvel élève" styleClass="text-xl font-bold text-gray-800"/>
                </HBox>

                <!-- Formulaire -->
                <VBox spacing="20">
                    <!-- Ligne 1: Nom & Prenom -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label text="Nom" styleClass="text-gray-700 font-medium"/>
                            <TextField fx:id="txtNom" promptText="Entrer le nom" styleClass="input-field"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Prénom" styleClass="text-gray-700 font-medium"/>
                            <TextField fx:id="txtPrenom" promptText="Entrer le prénom" styleClass="input-field"/>
                        </VBox>
                    </HBox>

                    <!-- Ligne 2: Téléphone & Catégorie -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label text="Téléphone" styleClass="text-gray-700 font-medium"/>
                            <TextField fx:id="txtTel" promptText="Ex: 034 12 345 67" styleClass="input-field"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Catégorie" styleClass="text-gray-700 font-medium"/>
                            <JFXComboBox fx:id="comboCategorie" promptText="Choisir une catégorie" styleClass="input-field"/>
                        </VBox>
                    </HBox>

                    <!-- Ligne 3: Paiement & Date examen code -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label text="Type de paiement" styleClass="text-gray-700 font-medium"/>
                            <JFXComboBox fx:id="comboPaiement" promptText="Sélectionner un type" styleClass="input-field"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Date examen code" styleClass="text-gray-700 font-medium"/>
                            <DatePicker fx:id="dateCode" styleClass="input-field"/>
                        </VBox>
                    </HBox>

                    <!-- Ligne 4: Date examen conduite -->
                    <VBox spacing="5">
                        <Label text="Date examen conduite" styleClass="text-gray-700 font-medium"/>
                        <DatePicker fx:id="dateConduite" styleClass="input-field"/>
                    </VBox>
                </VBox>

                <!-- Boutons -->
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <JFXButton text="Annuler" styleClass="btn-cancel"/>
                    <JFXButton text="Enregistrer" styleClass="btn-save"/>
                </HBox>

            </VBox>
        </AnchorPane>
    </children>
</StackPane>
