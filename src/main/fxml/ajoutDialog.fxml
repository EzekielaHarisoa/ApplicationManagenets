<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="550.0" prefWidth="950.0" styleClass="bg-light" stylesheets="@../../ressources/css/tailwindLight.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <AnchorPane>
            <VBox alignment="TOP_CENTER" spacing="30" styleClass="card" stylesheets="@../../ressources/css/dialodAdd.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                <!-- Titre -->
                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="902.0">
                    <Label styleClass="card-title" text="➕ Ajouter un nouvel élève" />
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </HBox>

                <!-- Formulaire -->
                <VBox prefHeight="311.0" prefWidth="865.0" spacing="20">
                    <!-- Ligne 1: Nom & Prenom -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label styleClass="text-gray-700 font-medium" text="Nom" />
                            <TextField fx:id="txtNom" promptText="Entrer le nom" styleClass="input-field" />
                        </VBox>
                        <VBox spacing="5">
                            <Label styleClass="text-gray-700 font-medium" text="Prénom" />
                            <TextField fx:id="txtPrenom" promptText="Entrer le prénom" styleClass="input-field" />
                        </VBox>
                    </HBox>

                    <!-- Ligne 2: Téléphone & Catégorie -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label styleClass="text-gray-700 font-medium" text="Téléphone" />
                            <TextField fx:id="txtTel" promptText="Ex: 034 12 345 67" styleClass="input-field" />
                        </VBox>
                        <VBox spacing="5">
                            <Label styleClass="text-gray-700 font-medium" text="Catégorie" />
                            <JFXComboBox fx:id="comboCategorie" promptText="Choisir une catégorie" styleClass="input-field" />
                        </VBox>
                    </HBox>

                    <!-- Ligne 3: Paiement & Date examen code -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <Label styleClass="text-gray-700 font-medium" text="Type de paiement" />
                            <JFXComboBox fx:id="comboPaiement" prefHeight="43.0" prefWidth="165.0" promptText="Sélectionner un type" styleClass="input-field" />
                        </VBox>
                        <VBox spacing="5">
                            <Label styleClass="text-gray-700 font-medium" text="Date examen code" />
                            <DatePicker fx:id="dateCode" styleClass="input-field" />
                        </VBox>
                    </HBox>

                    <!-- Ligne 4: Date examen conduite -->
                    <VBox spacing="5">
                        <Label styleClass="text-gray-700 font-medium" text="Date examen conduite" />
                        <DatePicker fx:id="dateConduite" styleClass="input-field" />
                    </VBox>
                </VBox>

                <!-- Boutons -->
                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <JFXButton prefHeight="30.0" prefWidth="161.0" styleClass="btn-cancel" text="Annuler" />
                    <JFXButton prefHeight="30.0" prefWidth="145.0" styleClass="btn-save" text="Enregistrer" />
                </HBox>

            </VBox>
        </AnchorPane>
    </children>
</StackPane>
